@model AAS2237A5.Models.RegisterViewModelForm
@{
    ViewBag.Title = "Register";
}

<main aria-labelledby="title">
    <h2 id="title">@ViewBag.Title.</h2>

    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4>Create a new account.</h4>
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })

        <div class="row mb-3">
            @Html.LabelFor(m => m.GivenName, new { @class = "col-form-label col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.GivenName, new { @class = "form-control" })
            </div>
        </div>
        <div class="row mb-3">
            @Html.LabelFor(m => m.Surname, new { @class = "col-form-label col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Surname, new { @class = "form-control" })
            </div>
        </div>
        
        <div class="row mb-3">
            @Html.LabelFor(m => m.Email, new { @class = "col-form-label col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            </div>
        </div>
        <div class="row mb-3">
            @Html.LabelFor(m => m.Password, new { @class = "col-form-label col-sm-2" })
            <div class="col-sm-10">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            </div>
        </div>
        <div class="row mb-3">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-form-label col-sm-2" })
            <div class="col-sm-10">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>
        </div>

        <div class="row mb-3">
            @Html.LabelFor(m => m.RoleList, new { @class = "col-form-label col-sm-2" })
            <div class="col-sm-10">
                @{
                    int i = 0;
                    foreach (var item in Model.RoleList)
                    {
                        i++;
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="Roles@(i)" name="Roles" checked="@item.Selected" value="@item.Text" />
                            <label class="form-check-label" for="Roles@(i)">
                                @item.Text
                            </label>
                        </div>
                    }
                }
            </div>
        </div>

        <div class="row mb-3">
            <div class="col">
                <input type="submit" value="Register" class="btn btn-primary" />
            </div>
        </div>
    }
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
